# vim: filetype=gitconfig ts=2

[core]
  editor = nvim
  pager = delta
  autocrlf = no

  # 파일 변경 감지 속도 향상
  fsmonitor = true
  untrackedCache = true
[init]
  defaultBranch = main
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[commit]
  verbose = true
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[help]
  autocorrect = prompt
[log]
  date = format:%y-%m-%d %H:%M
[delta]
  # delta --show-syntax-themes
  # delta --diff-so-fancy --show-config
  plus-style = syntax "#114411"
  navigate = true
  line-numbers = true
  hyperlinks = true
  # side-by-side = true
[rerere]
  enabled = true
  autoupdate = true
[push]
  # push local_branch_name => remote/local_branch_name
  default = current
  autoSetupRemote = true
  followTags = true
[fetch]
  prune = true
  pruneTags = true
  all = true
[pull]
  rebase = true
  ff = only
[diff]
  colorMoved = plain
  algorithm = histogram
  mnemonicPrefix = true
  renames = true
[merge]
  ; conflictstyle = zdiff3
; [url "git@github.com:"]
; 	insteadOf = https://github.com/
[pretty]
  basic = format:"%C(green)%h %C(reset)%ad %C(blue)%an %C(reset)%s %C(yellow)(%ar)"
[format]
  pretty = basic
[alias]
  d = diff
  ds = diff --staged
  dss = !DELTA_FEATURES=+side-by-side git diff --staged

  rm-untracked = !$HOME/.config/git/alias/rm-untracks
  gr = !$HOME/.config/git/alias/gr
  gra = !$HOME/.config/git/alias/gr --all

  st = status --short --branch
  sti = status --short --branch --ignored

  s = switch
  sw = switch
  swf = !$HOME/.config/git/alias/swf
  swm = !git switch $(git main-branch)

  b = branch
  br = !$HOME/.config/git/alias/br
  br-cleanup = !$HOME/.config/git/alias/br-cleanup

  pr = pull --autostash --ff-only
  puo = push origin HEAD
  puof = push origin HEAD --force-with-lease

  cv = commit -v

  up-branch = !echo $(git remote | grep up || git remote | grep origin)
  main-branch = !git symbolic-ref refs/remotes/origin/HEAD | cut -d'/' -f4

  # Workflow commands (require GIT_UPSTREAM env var)
  upstream = !$HOME/.config/git/alias/upstream
  begin = !$HOME/.config/git/alias/begin
  sync = !$HOME/.config/git/alias/sync
  submit = !$HOME/.config/git/alias/submit
