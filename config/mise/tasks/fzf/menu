# fzf --bind 'change:execute-silent([[ $(fzf-tmux --print-query | wc -l) -eq 2 ]] && echo $(fzf-tmux --print-query | tail -n1) && kill $(ps -o ppid= -p $$) 2>/dev/null)'
# fzf --bind 'change:if([[ $(wc -l <<< {} ) -eq 1 ]]; then print {}; exit; fi)'
