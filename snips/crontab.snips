snippet cronenv "need `mkdir ~/logs`"
# in macos output :
#
#   SHELL=/bin/bash
#   PATH=/usr/bin:/bin
#   LOGNAME=username
#   USER=username
#   HOME=/Users/username
#   SHLVL=0
#   PWD=/Users/username
#   OLDPWD=/Users/username
#   _=/usr/bin/printenv
#
* * * * * printenv > $HOME/logs/cronenv
endsnippet

snippet shell_env ""
SHELL=/bin/zsh
PATH=$PATH

* * * * * printenv
endsnippet

snippet hourly ""
0 * * * * echo 123
endsnippet

snippet hourly_rsync ""
0 * * * * rsync -avz /path/to/source /path/to/destination
endsnippet

snippet daily_docker_image_prune ""
# every day at 5:00
0 5 * * * /usr/bin/docker image prune -f > /dev/null 2>&1
endsnippet
