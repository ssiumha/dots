snippet rows_to_table "2d array to html table format"
def rows_to_html_table(rows)
  html = '<table>'
  rows.each_with_index do |row, i|
    if i.zero?
      html += '<thead>'
    else
      html += '<tbody>'
    end

    html += '<tr>'
    row.each do |col|
      if i.zero?
        html += "<th>#{col}</th>"
      else
        html += "<td>#{col}</td>"
      end
    end
    html += '</tr>'

    if i.zero?
      html += '</thead>'
    else
      html += '</tbody>'
    end
  end
  html += '</table>'
end
endsnippet

